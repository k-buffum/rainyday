<!-- Search field for the site -->
<%= form_tag("/results", method: "get") do %>
  <%= label_tag(:code, "Search this zip code") %>
  <%= text_field_tag(:code, @current_user.zip.code) %>
  <%= label_tag(:q, "Search for things to do:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>